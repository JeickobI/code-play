<Window x:Class="code_play.Play"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:code_play"
        mc:Ignorable="d"
        Title="Play" Height="1080" Width="1920" Background="LightCyan"
        WindowState="Maximized" WindowStyle="None">
    <StackPanel>
        <Button Height="100" Content="Выход" FontSize="32" Width="300" HorizontalAlignment="Left" Name="vihod1" Click="vihod1_Click"/>
        <TextBlock Text="Выбрать аккаунт:" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"/>
        <ComboBox Height="100" Width="1000" Margin="0,20,0,0" FontSize="32">
            <ComboBoxItem Content="Name1" FontSize="32"/>
            <ComboBoxItem Content="Name2" FontSize="32"/>
            <ComboBoxItem Content="Name3" FontSize="32"/>
            <ComboBoxItem Content="Name4" FontSize="32"/>
        </ComboBox>
        <TextBlock Text="Регистрация:" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,0"/>
        <DockPanel>
            <DockPanel>
                <TextBlock Text="Имя:" FontSize="36" Margin="700,20,0,0"/>
            </DockPanel>
            <DockPanel>
                <TextBox Width="600" Height="100" Margin="-720,20,0,0" FontSize="36" Name="playgame"/>
            </DockPanel>
        </DockPanel>
        <DockPanel>
            <DockPanel>
                <TextBlock Text="Пароль:" FontSize="36" Margin="700,20,0,0"/>
            </DockPanel>
            <DockPanel>
                <TextBox Width="600" Height="100" Margin="-770,20,0,0" FontSize="36"/>
            </DockPanel>
        </DockPanel>
        <Button Content="Зарегистрироваться" HorizontalAlignment="Center" FontSize="36" Margin="0,20,0,0" Name="reg" Click="reg_Click"/>
        <Button Content="Таблица лидеров" HorizontalAlignment="Center" FontSize="36" Margin="0,20,0,0" Name="lideri" Click="lideri_Click"/>
        <Button Content="Играть" HorizontalAlignment="Center" FontSize="36" Margin="0,20,0,0" Height="80" Width="150" Name="play1"/>
    </StackPanel>
</Window>
